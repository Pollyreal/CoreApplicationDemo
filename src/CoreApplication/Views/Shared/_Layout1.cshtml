@{
    //控制器名
    string controller = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    //方法名
    string action = ViewContext.RouteData.Values["action"].ToString().ToLower();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle"></button>
                <a class="navbar-brand" href="#">你好世界</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">首页</a></li>
                    <li class="active"><a href="#">列表</a></li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="嗖嗖嗖">
                    </div>
                    <button type="submit" class="btn btn-default">搜索</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">注册</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <!--菜单-->
    <div class="menu col-sm-2">
        <ul class="nav nav-pills nav-stacked">

            <li role="presentation" class="@(controller == "home" && action == "index" ? "active" : "")">
                <a asp-area="" asp-controller="Home" asp-action="Index">主页</a></li>
            <li role="presentation" class="@(controller == "home" && action == "list" ? "active" : "")">
                <a asp-area="" asp-controller="Home" asp-action="List">列表</a></li>
            <li role="presentation"><a href="#">另一页</a></li>
        </ul>
    </div>
    <div class="container col-sm-10">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>
    <script src="http://cdn.jsdelivr.net/vue/2.2.6/vue.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>